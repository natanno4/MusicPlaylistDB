<Window x:Class="MusicPlayList.View.CountryChooser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicPlayList.View"
        mc:Ignorable="d"
        Title="Country chooser" Height="450" Width="800" Background="#04c582">
    <Grid Margin="0,0,0,-21">
        <Border CornerRadius="20" Margin="30">
            <ListBox Background="#2e3137" ItemsSource="{Binding Areas_count}" >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox IsChecked="{Binding IsChecked}" Content="{Binding Extension}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

        </Border>
        <Button IsEnabled="{Binding Path=IsButtonEnabled}" Content="Continue" Margin="258,342,437,65" Name="btnContinue" Click="ContinueBtn_Click" Background="#545d6a" Foreground="White" FontSize="20"/>
        <Button IsEnabled="{Binding Path=IsButtonEnabled}" Content="Choose Random" Margin="496,342,137,65" Name="btnRandom" Click="RandomBtn_click" Background="#545d6a" Foreground="White" FontSize="20"/>

    </Grid>
</Window>
