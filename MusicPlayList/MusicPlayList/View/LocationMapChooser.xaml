<Window x:Class="MusicPlayList.View.LocationMapChooser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicPlayList.View"
        mc:Ignorable="d"
        Title="LocationMapChooser" Height="800" Width="900" Background="#04c582">
    <Border Background="#2e3137" CornerRadius="20" Margin="30">
        <StackPanel Margin="20,23,20,41">
            <Label Content="Choose location" Foreground="White" FontStyle="Italic" FontSize="40" HorizontalAlignment="Center" RenderTransformOrigin="0.499,0.714"/>
            <Separator Height="55" ></Separator>
            <Grid x:Name="girdMap">
                <Image Source="../greenMap.png"  MouseLeftButtonDown="OnMapClick" x:Name="worldMap" Height="360" Width="720"/>
            </Grid>
            <Separator Height="55" ></Separator>
            <Button x:Name="BtnNext" Click="BtnNext_Click" Content="Next" Background="#545d6a" Foreground="White" FontSize="20" Height="46" RenderTransformOrigin="0.5,0.5" Margin="342,10,342,0" />
        </StackPanel>
    </Border>
</Window>
